<div class="background">
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{/each}}
<div class="container">
    <center>
    <h1 class="text-white">Sign up to participate in the draw</h1>
    </center>
<div class="card border-primary form-opacity mb-3 mt-4">
    <div class="card-body">
<form action="/cadastro/register" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" autocomplete="off" name="nome" id="nome" aria-describedby="emailHelp">

    </div>
    <div class="form-group">
        <label>CPF</label>
        <input type="text" class="form-control cpf-mask" name="cpf" id="cpf">
    </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
</div>
{{#each registers}}
    <form action="" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
    </form>
    {{/each}}

</div>
</div>
